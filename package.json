{
  "name": "manza",
  "version": "0.1.0",
  "description": "A lightweight, open-source markdown editor and viewer with beautiful GitHub-style rendering",
  "author": "mrilikecoding",
  "license": "MIT",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/mrilikecoding/manza.git"
  },
  "bugs": {
    "url": "https://github.com/mrilikecoding/manza/issues"
  },
  "homepage": "https://github.com/mrilikecoding/manza#readme",
  "keywords": [
    "markdown",
    "editor",
    "viewer",
    "gfm",
    "github-flavored-markdown",
    "latex",
    "mermaid",
    "tauri",
    "react",
    "typescript"
  ],
  "scripts": {
    "dev": "tauri dev",
    "build": "tsc && vite build && tauri build",
    "preview": "vite preview",
    "tauri": "tauri",
    "lint": "eslint . --ext .ts,.tsx --max-warnings 0",
    "lint:check": "eslint --max-warnings 0",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css,json}\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run --coverage",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:bdd": "vitest run --grep \"@bdd\"",
    "test:e2e": "playwright test",
    "docs:generate": "typedoc --out docs/api src",
    "docs:serve": "npx serve docs/api -p 3001"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@tauri-apps/api": "^1.6.0",
    "zustand": "^4.5.5",
    "markdown-it": "^14.1.0",
    "katex": "^0.16.11",
    "mermaid": "^11.4.1",
    "shiki": "^1.22.2",
    "chokidar": "^4.0.1"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.6.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@types/markdown-it": "^14.1.2",
    "@types/katex": "^0.16.7",
    "@types/node": "^22.8.7",
    "@vitejs/plugin-react": "^4.3.3",
    "vite": "^5.4.11",
    "typescript": "^5.6.3",
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^9.13.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.13",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "vitest": "^2.1.4",
    "@vitest/coverage-v8": "^2.1.4",
    "@testing-library/react": "^16.0.1",
    "@testing-library/jest-dom": "^6.6.2",
    "@testing-library/user-event": "^14.5.2",
    "jsdom": "^25.0.1",
    "tailwindcss": "^3.4.14",
    "postcss": "^8.4.47",
    "autoprefixer": "^10.4.20",
    "@primer/css": "^21.5.1",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-dropdown-menu": "^2.1.2",
    "@radix-ui/react-tooltip": "^1.1.4",
    "typedoc": "^0.26.10",
    "playwright": "^1.48.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "yarn": ">=1.22.0"
  }
}
